#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────────
# Description
#   Insert a flag (a visual marker) and execute the given command.
#
# Arguments
#   1 (required) the command to run
# ──────────────────────────────────────────────────────────────────────────────────────────────────

if [ -n $1 ]; then
  flag $@
  eval $@
  exit $?
fi
exit 1
