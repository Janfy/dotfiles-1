#!/usr/bin/env zsh
# ------------------------------------------------------------------------------------------
# Description
#   Allow pulling only the current branch from the remote-tracked branch (if there
#   is one) without having to manually specify the remote branch and without
#   having to globally reconfigure pull.current.
# ------------------------------------------------------------------------------------------

local upstream=$(git rev-parse --symbolic-full-name --abbrev-ref @{u} 2>/dev/null)
[[ -n $upstream ]] || exit 1

git pull ${(s:/:)upstream} $*
